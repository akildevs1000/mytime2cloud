{
  "name": "mytime2cloud-desktop-app",
  "version": "27.10.2025",
  "description": "mytime2cloud-desktop-app",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "publish": {
      "provider": "generic",
      "url": "https://backend.mytime2cloud.com/desktop_updates/"
    },
    "appId": "desktop.mytime2cloud",
    "files": [
      "assets/**/*",
      "helpers.js",
      "updater.js",
      "index.html",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "kill-processes.bat",
        "to": "kill-processes.bat"
      },
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "conf",
        "to": "conf"
      },
      {
        "from": "frontend/dist",
        "to": "frontend/dist"
      },
      {
        "from": "employee/dist",
        "to": "employee/dist"
      },
      {
        "from": "logs",
        "to": "logs"
      },
      {
        "from": "temp",
        "to": "temp"
      },
      {
        "from": "nginx.exe",
        "to": "nginx.exe"
      },
      {
        "from": "vs_redist.exe",
        "to": "vs_redist.exe"
      },
      {
        "from": "dlls",
        "to": "dlls"
      },
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "productName": "MyTime2Desktop",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "frontend/dist/favicon-256x256.png",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "license": "license.txt",
      "createDesktopShortcut": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.2",
    "simple-git": "^3.28.0",
    "unzipper": "^0.12.3",
    "ws": "^8.18.3"
  }
}
